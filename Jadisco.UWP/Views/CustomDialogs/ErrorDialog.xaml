<ContentDialog
    x:Class="Jadisco.UWP.Views.CustomDialogs.ErrorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource SystemControlChromeLowAcrylicWindowBrush}"
    PrimaryButtonClick="PrimaryButtonClick"
    PrimaryButtonStyle="{StaticResource ButtonRevealStyle}"
    PrimaryButtonText="Zamknij"
    mc:Ignorable="d">

    <ContentDialog.Content>
        <TextBlock x:Name="MessageText" TextWrapping="Wrap"/>
    </ContentDialog.Content>
</ContentDialog>