<UserControl
    x:Class="JaDisco_UWP.Controls.PoorChat.ChatMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400" d:DesignHeight="24">

    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding Author}" FontSize="12" Margin="4 0 4 0" Grid.Column="1" />
        <TextBlock Text="{Binding Message}" FontSize="12" Foreground="LightGray" TextWrapping="Wrap" Margin="4 0 4 0" Grid.Column="2" />
    </Grid>
</UserControl>
