<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Style x:Key="NavigationView" TargetType="muxc:NavigationView">
        <Setter Property="IsBackButtonVisible" Value="Collapsed"/>
        <Setter Property="IsSettingsVisible" Value="False"/>
        <Setter Property="Margin" Value="0,34,0,0"/>
        <Setter Property="PaneDisplayMode" Value="Top"/>
    </Style>

    <Style x:Key="CommandBar" TargetType="CommandBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="OverflowButtonVisibility" Value="Collapsed"/>
    </Style>

    <Style x:Key="ProgressBar" TargetType="ProgressBar">
        <Setter Property="Background" Value="#171717"/>
        <Setter Property="IsIndeterminate" Value="True"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <Style x:Key="MediaTransportControls" TargetType="MediaTransportControls">
        <Setter Property="IsCompact" Value="True"/>
        <Setter Property="IsSeekBarVisible" Value="False"/>
        <Setter Property="IsSeekEnabled" Value="False"/>
    </Style>
</ResourceDictionary>